<%= form_for family do |f| %>

  <p class="last_name-field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p class="address-field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>

  <p class="password-field">
    <%= f.label :password %><br>
    <%= f.text_field :password %>
  </p>

  <p class="phone-field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>

  <p class="email-field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

  <p class="info-field">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </p>

  <p class="mpg-field">
    <%= f.label :mpg %><br>
    <%= f.text_field :mpg %>
  </p>

  <p class="optout-field">
    <%= f.label :optout %><br>
    <%= f.text_field :optout %>
  </p>

  <p class="submit-update">
    <%= f.submit %>
  </p>

<% end %>